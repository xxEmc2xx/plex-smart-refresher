# Plex Server Konfiguration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=YOUR_PLEX_TOKEN_HERE
PLEX_TIMEOUT=60

# GUI Passwort (bei Nutzung von Nginx Basic Auth leer lassen, um Doppel-Login zu vermeiden)
GUI_PASSWORD=YOUR_PASSWORD_HERE

# Telegram Benachrichtigungen (optional)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# Sicherheit: Login-Versuche begrenzen
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
